{% extends 'base.html.twig' %}

{% block title %}Partenaire index{% endblock %}

{% block body %}
    <h1>Partenaire index</h1>


    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h5 class="card-title">Partenaire</h5>
                <h6 class="card-subtitle text-muted">Retrouvez ici tous les partenaires de votre organisation</h6>

            </div>
            <div class="card-body">

                <table  class="table-striped datatables-basic table">
                    <thead>
                    <tr>
                        <th>Id</th>
                        <th>Organisation</th>
                        <th>Designation</th>
                        <th>actions</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for partenaire in partenaires %}
                        <tr>
                            <td>{{ partenaire.id }}</td>
                            <td>{{ partenaire.organisation.raisonSocial }}</td>
                            <td>{{ partenaire.designation }}</td>
                            <td>
                                <a class="btn btn-info btn-sm" href="{{ path('partenaire_edit', {'id': partenaire.id}) }}">Modifier</a>
                                {{ include('partenaire/_delete_form.html.twig') }}
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="3">aucun enregistrement trouv√©</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>

{% endblock %}

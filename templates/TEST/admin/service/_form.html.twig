{{ form_start(form) }}

<div class="row">

    <div class="col-md-12">

        <div class="row">
            <div class="col-md-6">
                <label>Libelle</label>
                {{ form_widget(form.libelleService, {'attr' : {'class':'form-control'}}) }}
            </div>

            <div class="col-md-6">
                <label>Image</label>
                {{ form_widget(form.imageService, {'attr' : {'class':'form-control'}}) }}
            </div>
        </div>

        <div class="row" style="margin-top: 20px;">
            <div class="col-md-12">
                <label>Description</label>
                {{ form_widget(form.descriptionService, {'attr' : {'class':'form-control'}}) }}
            </div>
        </div>

        <div class="row" style="margin-top: 30px;">
            <div class="col-md-4"></div>
            <div class="col-md-4 text-center">
                <button class="btn btn-success">{{ button_label|default('Enregistrer') }}</button>
            </div>
            <div class="col-md-4"></div>
        </div>

    </div>
</div>
{{ form_end(form) }}

<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    {#  CSS #}
    {% block style %}
       <link rel="stylesheet" type="text/css" href="{{ asset('admin/css/main.css')}}">


{#<script src="//cdn.ckeditor.com/4.11.1/standard/ckeditor.js"></script>#}
       {#<link rel="stylesheet" type="text/css" href="{{ absolute_url(asset('css/main.css'))}}">#}
      <link rel="stylesheet" type="text/css" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">

      <link rel="stylesheet" href="{{ asset('plugins/chosen/css/bootstrap-chosen.css') }}"/>

    {% endblock %}
    <title>
      Dashboard - {% block pagetitle %} {% endblock %}
    </title>   
    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries-->
    <!--if lt IE 9
    script(src='https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js')
    script(src='https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js')
    -->
  </head>
  <body class="sidebar-mini fixed">

    <div class="wrapper">
      <!-- Navbar-->
      <header class="main-header hidden-print"><a class="logo" href="#">Sitp</a>
          {% include 'admin/head.twig' %}
      </header>
      <!-- Side-Nav-->
      <aside class="main-sidebar hidden-print">
        {% include 'admin/side_nav.twig' %}
      </aside>
      <div class="content-wrapper">
        <div class="page-title">
          <div>
            <h1><i class="{% block contenttitlefaicon %} {% endblock %}"></i> {% block contenttitle %} {% endblock %} </h1>
            <p> {% block contentsubtitle %}{% endblock %} </p>

          </div>
          <div>
            <ul class="breadcrumb">
              <li><i class="fa fa-home fa-lg"></i></li>
              <li><a href="#">Blank Page</a></li>
            </ul>
          </div>
        </div>

        <div class="row">
          <div class="col-md-12">
              {% block outterCard %}

                  {% for label, messages in app.flashes %}
                      {% for message in messages %}
                        <div class="bs-component">
                          <div class="alert alert-dismissible alert-{{ label }}">
                            <button class="close" type="button" data-dismiss="alert">Ã—</button>
                            <h4> {{ message }}!</h4>
                          </div>
                        </div>
                      {% endfor %}
                  {% endfor %}

              {% endblock %}
            <div id="card" class="card">
              <div class="card-body">
                {% block pagecontent %}  {% endblock %}
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <!-- Javascripts-->
    {% block script %}
      <script src="{{ asset('admin/js/jquery-2.1.4.min.js') }}"></script>
      <script src="{{ asset('admin/js/bootstrap.min.js') }}"></script>
      <script src="{{ asset('admin/js/plugins/pace.min.js') }}"></script>
      <script src="{{ asset('admin/js/main.js') }}"></script>

        {#FOSJSRouting js#}
      <script src="{{ asset('bundles/fosjsrouting/js/router.js') }}"></script>
      <script src="{{ path('fos_js_routing_js', { callback: 'fos.Router.setData' }) }}"></script>

        {#Plugin pour chosen select bootstrap#}
      <script type="text/javascript" src="{{ asset('plugins/chosen/js/chosen.jquery.min.js') }}"></script>
      <script type="text/javascript" src="{{ asset('plugins/chosen/js/init.js') }}"></script>
        <script>
            $('.chosen').chosen({
                width: '100%'
            })
        </script>


    {% endblock %}
    
  </body>
</html>

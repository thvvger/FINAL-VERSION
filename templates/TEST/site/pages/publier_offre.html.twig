                                        {{ form_widget(form.etatBien, {'attr': {'class': 'form-text input', 'style': 'width: 230px'}}) }}

                                        <span class="rouge fright">*</span>
                                    </div>



                                </div>


                                <div class="form-item form-field relative webform-component webform-component-textfield"
                                     id="webform-component-fieldset-vous--telephone">
                                    <label for="edit-submitted-fieldset-vous-telephone"
                                           class="label">Département</label>

                                    {{ form_widget(form.departement, {'attr': {'class': 'form-text required input departement', 'style': 'width: 230px;'}}) }}

                                    <span class="rouge fright">*</span>
                                </div>


                                <div class="form-item form-field relative webform-component webform-component-textfield"
                                     id="webform-component-fieldset-filleul--filleul-ville">
                                    <label for="edit-submitted-fieldset-filleul-filleul-ville"
                                           class="label">Ville</label>

                                    {{ form_widget(form.villeString, {'attr': {'class':'form-text required input ville', 'size':'60', '':'128', 'list':'ville-datalist', 'placeholder': 'Saisissez au moins 3 caractères'}}) }}

                                    <span class="rouge fright">*</span>
                                </div>
                                <datalist id="ville-datalist"></datalist>

                                <div class="form-item form-field relative webform-component webform-component-textfield"
                                     id="webform-component-fieldset-filleul--filleul-ville">
                                    <label for="edit-submitted-fieldset-filleul-filleul-ville"
                                           class="label">Arrondissement</label>

                                    {{ form_widget(form.arrondissementString, {'attr': {'class':'form-text required input arrondissement', 'size':'60', '':'128', 'list':'arrondissement-datalist', 'placeholder': 'Saisissez au moins 3 caractères'}}) }}

                                    <span class="rouge fright">*</span>
                                </div>
                                <datalist id="arrondissement-datalist"></datalist>

                                <div class="form-item form-field relative webform-component webform-component-textfield"
                                     id="webform-component-fieldset-filleul--filleul-ville">
                                    <label for="edit-submitted-fieldset-filleul-filleul-ville"
                                           class="label">Quartier</label>

                                    {{ form_widget(form.quartierString, {'attr': {'class':'form-text required input quartier', 'size':'60', '':'128', 'list':'quartier-datalist', 'placeholder': 'Saisissez au moins 3 caractères'}}) }}

                                    <span class="rouge fright">*</span>
                                </div>
                                <datalist id="quartier-datalist"></datalist>



{% block content %}


    <aside id="edito-aside" class="clearfix w280 fleft">
        <header onclick="$(this).toggleClass('expanded');">Menu</header>
        <nav class="edito-nav">
            <span class="triangle"></span>
            <ul class="edito-nav-list">
                <li class="rub-bord"><a href="{{ path('publier_offre') }}" class="link active">Publier une offre</a>
                </li>
                <li class="rub-bord"><a href="{{ path('contact') }}" class="link">Contactez-nous</a></li>

            </ul>
        </nav>
    </aside>


    <div class="clearfix w1200 marge-auto " id="parrainage-detail">

        <aside id="edito-aside" class="clearfix w280 fleft aside">
            <section id="block-block-4" class="block block-block clearfix">
            </section>
        </aside>
        <div id="parrainage-content" class="clearfix fright">


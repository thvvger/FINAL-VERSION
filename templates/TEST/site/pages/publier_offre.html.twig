                                        <label for="edit-submitted-fieldset-vous-ville"
                                               class="label">Ville</label>
                                        {#<input type="text" id="edit-submitted-fieldset-vous-ville"#}
                                               {#name="submitted[fieldset_vous][ville]" value="" size="60"#}
                                               {#maxlength="128" class="form-text required input"/>#}

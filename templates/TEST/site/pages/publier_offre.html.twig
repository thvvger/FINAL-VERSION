                                        {#<input type="text" id="edit-submitted-fieldset-vous-telephone"#}
                                               {#name="submitted[fieldset_vous][telephone]" value="" size="60"#}
                                               {#maxlength="128" class="form-text required input"/>#}
                                        {{ form_widget(form.client.telephone, {'attr': {'class': 'form-text input'}}) }}

                                        <span class="rouge fright">*</span>
                                    </div>

                                    <div class="form-item form-field relative webform-component webform-component-textfield"
                                         id="webform-component-fieldset-vous--nom">
                                        <label for="edit-submitted-fieldset-vous-nom" class="label">Profession</label>
                                        {#<input type="text" id="edit-submitted-fieldset-vous-nom"#}
                                        {#name="submitted[fieldset_vous][nom]" value="" size="60"#}
                                        {#maxlength="128" class="form-text required input"/>#}

                                        {{ form_widget(form.client.profession, {'attr': {'class': 'form-text input'}}) }}

                                        <span class="rouge fright">*</span>
                                    </div>

                                    <div class="input form-item form-field relative webform-component webform-component-email"
                                         id="webform-component-fieldset-vous--email">
                                        <label for="edit-submitted-fieldset-vous-email"
                                               class="label">Email</label>
                                        {#<input class="input form-text form-email required" type="email"#}
                                               {#id="edit-submitted-fieldset-vous-email"#}
                                               {#name="submitted[fieldset_vous][email]" size="60"/>#}
                                        {{ form_widget(form.client.email, {'attr': {'class': 'form-text form-email input'}}) }}

                                        {#<span class="rouge fright">*</span>#}
                                    </div>

                                </div>
                            </fieldset>


                            <fieldset class="clearfix votre-filleul fright form-wrapper"
                                      id="webform-component-fieldset-filleul">
                                <legend><span class="fieldset-legend"><span class="clearfix title rouge"><span
                                                    class="ico ico-votre-filleul"></span>Votre offre </span></span>
                                </legend>
                                <div class="fieldset-wrapper">
                                    <div class="civilite radios clearfix form-item form-field relative webform-component webform-component-radios"
                                         id="webform-component-fieldset-filleul--filleul-civilite">
                                        <label for="edit-submitted-fieldset-filleul-filleul-civilite"
                                               class="label">Bien
                                        </label>
                                        <ul id="edit-submitted-fieldset-filleul-filleul-civilite"
                                            class="form-radios civilite radios clearfix">
                                            <li class='clearfix'>
                                                <label class='radio-label'>
                                                    <input
                                                            class="uniform form-radio" type="radio"
                                                            name="typeOffre"
                                                            checked
                                                            value="LOUER"/>A louer</label>
                                            </li>
                                            <li class='clearfix'><label class='radio-label'>
                                                    <input
                                                            class="uniform form-radio" type="radio"
                                                            name="typeOffre"
                                                            value="VENDRE"/>A vendre</label>
                                            </li>
                                        </ul>
                                        <span class="rouge fright">*</span>
                                    </div>

                                    <div class="form-item form-field relative webform-component webform-component-textfield"
                                         id="webform-component-fieldset-filleul--filleul-telephone">
                                        <label for="edit-submitted-fieldset-filleul-filleul-telephone"
                                               class="label">Nature de bien</label>
                                        {{ form_widget(form.natureBien, {'attr': {'class': 'form-text input', 'style': 'width: 230px'}}) }}
                                        {#{{ form_widget(form.nombrePieces, {'attr': {'class':'form-text required input', 'style':'width: 230px;'}}) }}#}

                                        <span class="rouge fright">*</span>
                                    </div>


                                    <div class="form-item form-field relative webform-component webform-component-textfield"
                                         id="webform-component-fieldset-filleul--filleul-nom">
                                        <label for="edit-submitted-fieldset-filleul-filleul-nom" class="label">Type
                                            de bien</label>
                                        {{ form_widget(form.typeBien, {'attr': {'class' : 'form-text required input', 'style': 'width: 230px'}}) }}


                                        {#<select style="width: 230px;" name="type_bien" id="" required#}
                                        {#class="form-text required input">#}
                                        {#<option value="">---Sélectionné---</option>#}
                                        {#<option value="APP_NON_MEUBLE">Appartement non meublé</option>#}
                                        {#<option value="APP_MEUBLE">Appartement meublé</option>#}
                                        {#<option value="VILLA_MAISON">Villa/Maison</option>#}
                                        {#<option value="PARCELLE">Parcelle</option>#}
                                        {#<option value="BOUTIQUE">Boutique</option>#}
                                        {#<option value="EXP_BUREAU">Expace Bureau</option>#}
                                        {#</select>#}

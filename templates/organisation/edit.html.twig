{% block  javascripts %}
    {{ parent() }}


    <script>
        $(".generateToken").on("click", function () {

            $.ajax({
                url: `{{ path('generate_token') }}`,
                type: 'POST',
                dataType: 'json',
                async: true,
                data: {
                    username: $('.nom').val(),
                    password: $('.password').val(),
                    route: $('.route').val()
                },
                success: function (data, status) {

                    $('.linkHolder').val(data)
                },
                error: function (xhr, textStatus, errorThrown) {
                    $('.linkHolder').val(xhr.responseText)
                }
            });
        });
    </script>


